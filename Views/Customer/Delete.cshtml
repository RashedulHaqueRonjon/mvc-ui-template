@model MVCUITemplate.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container py-3">
    <h2 class="text-danger mb-3">Delete Customer</h2>
    <hr />

    <h5>Are you sure you want to delete this customer?</h5>

    <dl class="row mt-3">
        <dt class="col-sm-3 fw-semibold">Full Name</dt>
        <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

        <dt class="col-sm-3 fw-semibold">Email</dt>
        <dd class="col-sm-9">@Model.EmailAddress</dd>

        <dt class="col-sm-3 fw-semibold">Company</dt>
        <dd class="col-sm-9">@Model.CompanyName</dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="CustomerID" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </form>
</div>
